pipeline {
    agent any

    tools {
        nodejs "node"
    }
    
    stages {
        stage('Run server') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'
                sh 'npm run dev &'
            }
        }
    }
    
    post {
        always {
            script {
                // Busca el proceso que escucha en el puerto 8091
                def pid = sh(script: 'lsof -t -i :8091', returnStatus: true).trim()
                
                if (pid) {
                    // Si se encontró un PID, utiliza el comando kill para detener el proceso
                    sh "kill -15 ${pid}"
                } else {
                    echo 'No se encontró un proceso en el puerto 8091.'
                }
            }
        }
    }
}
