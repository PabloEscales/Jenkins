pipeline {
    agent any
    tools {
        nodejs "node"
    }
    
    stages {
        stage('install npm') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'
            }
        }

        stage('build') {
            steps {
                script {
                    try {
                        sh 'docker stop nuevito'
                        // sh 'docker rm nuevito'
                        // sh 'docker rmi node:latest'
                        } catch (Exception e) {
                        echo 'Exception occurred: ' + e.toString()
                    }
                }
                sh 'npm run build'
                sh 'docker build -t node:latest .'
            }
        }

        stage('deploy') {
            steps {
                sh 'docker run -d -p 8091:8091 --name nuevito node:latest'
            }
        }
    }
}