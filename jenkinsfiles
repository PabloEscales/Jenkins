pipeline {
    agent any

    tools {
        nodejs "node"
    }
    
    stages {
        stage('Run server') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'

                script {
                    // Inicia el servidor en segundo plano y guarda el ID del proceso
                    def serverProcess = sh(script: 'npm run dev & echo $!', returnStatus: true).trim()
                    echo "Server process ID: ${serverProcess}"

                    // Mata el proceso del servidor
                    sh "kill ${serverProcess}" || error('Error al matar el proceso del servidor')
                }
            }
        }
    }
}
