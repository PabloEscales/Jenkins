    stages {
        stage('Run server') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'
                sh 'npm run dev &'
            }
        }

        stage('Stop server') {
            steps { 
                sh 'echo q'
            }
        }
    }
}