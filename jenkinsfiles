pipeline {
    agent any

    tools {
        nodejs "node"
    }
    
    stages {
        stage('Run server') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'
                sh 'npm run dev &'
            }
        }
    }
    
    post {
        always {
            script {
                // Utiliza pkill para detener el proceso en el puerto 8091
                sh 'pkill -f "npm run dev"'
            }
        }
    }
}
