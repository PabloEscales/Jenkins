pipeline {
    agent any

    tools {
        nodejs "node"
    }
    
    stages {
        stage('Run server') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'
                sh 'npm run dev &'
            }
        }
    }
    
    post {
        always {
            script {
                // Busca el proceso que escucha en el puerto 8091
                def pid = sh(script: 'lsof -t -i :8091', returnStatus: true).trim()
                
                if (pid) {
                    // Convierte el PID a una cadena antes de usar trim
                    def pidString = pid.toString().trim()
                    
                    // Utiliza el comando kill para detener el proceso
                    sh "kill -15 ${pidString}"
                } else {
                    echo 'No se encontr√≥ un proceso en el puerto 8091.'
                }
            }
        }
    }
}