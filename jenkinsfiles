pipeline {
    agent any

    tools {
        nodejs "node"
    }
    
    stages {
        stage('Run server') {
            steps { 
                git branch: 'main', url: 'https://github.com/PabloEscales/Jenkins.git'
                sh 'npm i'
                
                // Verifica si el archivo de bloqueo existe
                script {
                    if (fileExists('server.lock')) {
                        // Si existe, mata el proceso
                        sh 'pkill -f "npm run dev"'
                    }
                }

                // Inicia el servidor
                sh 'npm run dev &'
                
                // Espera 30 segundos
                sleep time: 30, unit: 'SECONDS'
                
                // Mata el proceso despu√©s de 30 segundos
                sh 'pkill -f "npm run dev"'
            }
        }
    }

    post {
        always {
            script {
                // Crea el archivo de bloqueo
                writeFile file: 'server.lock', text: 'Server is running'
            }
        }
    }
}
